<blueprint
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

  <!-- this is the service this bundle is exposing (the Device Service) -->
  <service
    id="archiveDevice"
    interface="org.dcm4che.net.DeviceServiceInterface"
    ref="archiveDeviceImpl" />

  <!-- osgi blueprint property placeholder -->
  <cm:property-placeholder
    persistent-id="org.dcm4chee.archive.device"
    update-strategy="reload"> <!-- after a change of the property, the blueprint context is reloaded to 
      reflect the changes -->
    <cm:default-properties>
      <cm:property
        name="device-name"
        value="ECHOSCP" />
    </cm:default-properties>
  </cm:property-placeholder>

  <bean
    class="org.dcm4chee.archive.ArchiveService"
    id="archiveDeviceImpl"
    activation="eager"
    init-method="init"
    destroy-method="destroy">
    <property
      name="dicomConfiguration"
      ref="dicomConfig" />
    <property
      name="deviceName"
      value="${device-name}" />
  </bean>

  <reference
    id="dicomConfig"
    interface="org.dcm4che.conf.api.DicomConfiguration" />

</blueprint>