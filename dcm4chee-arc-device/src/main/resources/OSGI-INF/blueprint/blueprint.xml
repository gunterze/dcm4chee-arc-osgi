<blueprint
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <!-- this is the service this bundle is exposing (the Device Service) -->
    <service
        id="archiveDevice"
        interface="org.dcm4che.net.DeviceServiceInterface"
        ref="archiveDeviceImpl" />

    <bean
        class="org.dcm4chee.archive.ArchiveService"
        id="archiveDeviceImpl"
        activation="eager"
        init-method="init"
        destroy-method="destroy">
        <property name="dicomConfiguration" ref="dicomConfig" />
        <property name="deviceName" value="dcm4chee-arc" />
    </bean>

    <reference
        id="dicomConfig"
        interface="org.dcm4che.conf.api.DicomConfiguration" />

</blueprint>