<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
  xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="dcm4chee-arc">
    <jta-data-source>${ds}</jta-data-source>
    <mapping-file>META-INF/orm.xml</mapping-file>
    <properties>
      <property name="hibernate.dialect" value="org.dcm4chee.archive.entity.dialect.PatchedMySQL5InnoDBDialect" />
      <property name="hibernate.hbm2ddl.auto" value="${hbm2ddl.auto}" />
      <property name="hibernate.show_sql" value="${show_sql}" />
      <property name="hibernate.jdbc.use_get_generated_keys" value="true" />
      <property name="hibernate.jdbc.fetch_size" value="50"/>
      <property name="exposeManagedResourceClassLoader" value="true" />
      <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform"/>
    </properties>
  </persistence-unit>
</persistence>
