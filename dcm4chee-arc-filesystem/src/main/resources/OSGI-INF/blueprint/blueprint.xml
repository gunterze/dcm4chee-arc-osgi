<blueprint
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <service
        id="fileSystemService"
        interface="org.dcm4chee.archive.fs.FileSystemService"
        ref="fileSystemServiceImpl" />

    <bean
        class="org.dcm4chee.archive.fs.impl.FileSystemServiceImpl"
        id="fileSystemServiceImpl">
        <property name="userTransaction" ref="ut"/>
        <property name="entityManagerFactory" ref="emf"/>
    </bean>

    <reference id="ut" interface="javax.transaction.UserTransaction"/>

    <reference id="emf" interface="javax.persistence.EntityManagerFactory"
        filter="(osgi.unit.name=dcm4chee-arc)"/>

</blueprint>