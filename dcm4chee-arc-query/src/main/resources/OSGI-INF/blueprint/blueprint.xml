<blueprint
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0"
    xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0">
    
    <service
        id="queryService"
        interface="org.dcm4chee.archive.query.QueryService"
        ref="queryServiceImpl" />

    <bean
        class="org.dcm4chee.archive.query.impl.QueryServiceImpl"
        id="queryServiceImpl">
        <property name="dataSource" ref="dataSource" />
        <property name="sessionFactory" ref="sessionFactory" />
        <property name="seriesService" ref="seriesService" />
    </bean>

    <bean
        class="org.dcm4chee.archive.query.impl.SeriesService"
        id="seriesService">
        <jpa:context unitname="dcm4chee-arc" property="entityManager" />
        <tx:transaction method="*" value="Required" />
    </bean>

   <reference
        id="dataSource"
        interface="javax.sql.DataSource"
        filter="osgi.jndi.service.name=PacsDS" />

   <reference
        id="sessionFactory"
        interface="org.hibernate.SessionFactory" />


</blueprint>